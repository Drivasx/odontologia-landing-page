const servicios = [
  {
    id: 1,
    title: "Diagnóstico Dental 3D",
    description: "Escaneo digital completo de tu boca para un diagnóstico preciso y planificación de tratamientos personalizados.",
    icon: "fa-regular fa-tooth",
    delay: 100
  },
  {
    id: 2,
    title: "Blanqueamiento Avanzado",
    description: "Tratamientos de blanqueamiento dental que devuelven el brillo natural a tus dientes de forma segura y efectiva.",
    icon: "fa-solid fa-wand-magic-sparkles",
    delay: 200
  },
  {
    id: 3,
    title: "Implantes Dentales",
    description: "Soluciones permanentes para dientes perdidos con tecnología de implantes de última generación.",
    icon: "fa-solid fa-teeth",
    delay: 300
  },
  {
    id: 4,
    title: "Ortodoncia Invisible",
    description: "Alineadores transparentes personalizados que corrigen la posición de tus dientes discretamente.",
    icon: "fa-solid fa-teeth-open",
    delay: 400
  },
  {
    id: 5,
    title: "Odontopediatría",
    description: "Cuidado dental especializado para niños en un ambiente amigable y tranquilizador.",
    icon: "fa-solid fa-baby",
